generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int      @default(autoincrement()) @id
  email                 String   @unique
  name                  String?
  password              String
  dreams                Dream[]
}

model Dream {
  id                    Int      @default(autoincrement()) @id
  title                 String
  story                 String?
  weather               String
  time                  String
  knownPeople           String
  knownPeopleWho        String
  knownPeopleSubject    String
  unknownPeople         String
  unknownPeopleName     String
  unknownPeopleSubject  String
  differentItems        String
  differentBuildings    String
  experiencedSensations String
  personalMeaning       String
  otherObservations     String
  lucidityLevel         String
  emotions              String
  actions               String
  creationDate          DateTime  @default(now())
  published             Boolean  @default(false)
  author                User?    @relation(fields: [authorId], references: [id])
  authorId              Int?
}

